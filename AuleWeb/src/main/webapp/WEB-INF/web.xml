<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>Spage1</servlet-name>
        <servlet-class>controllers.Spage1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Spage2</servlet-name>
        <servlet-class>controllers.Spage2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Spage1</servlet-name>
        <url-pattern>/Spage1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Spage2</servlet-name>
        <url-pattern>/Spage2</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!-- Servlet di avvio quando si entra nel path generico dell'app -->
    <welcome-file-list>
        <welcome-file>Homepage.html</welcome-file>
    </welcome-file-list>
</web-app>
